<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="#042431" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:top="1dp" android:left="1dp" android:right="0.6dp">
                <shape android:shape="rectangle">
                    <solid android:color="#000000" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:right="3dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="90"
                        android:startColor="#042431"
                        android:centerColor="#08475A"
                        android:endColor="#042431"
                        android:useLevel="true" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_search_profile_24" android:gravity="center"/>
        </layer-list>
    </item>
</selector>
